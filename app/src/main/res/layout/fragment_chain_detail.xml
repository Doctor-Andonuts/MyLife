<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doctor_andonuts.mylife.ChainDetailFragment">


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/chainTitle"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:id="@+id/chainDivider"
        android:layout_below="@+id/chainTitle"
        android:background="#999999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calendarLabelGroup"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/chainDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calendarGroup"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/calendarLabelGroup" />


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/chainStartDateLabel"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Start Date: "
        android:layout_below="@+id/calendarGroup"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/chainStartDate"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/calendarGroup"
        android:layout_toEndOf="@id/chainStartDateLabel"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/chainEndDateLabel"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="End Date: "
        android:layout_below="@+id/chainStartDateLabel"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/chainEndDate"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/chainStartDateLabel"
        android:layout_toEndOf="@id/chainEndDateLabel"
        android:layout_height="wrap_content"/>


</RelativeLayout>
